{
  "name": "abc-ecommerce-platform",
  "version": "1.0.0",
  "description": "ABC Online School - Full-stack eCommerce platform with React and NestJS",
  "main": "index.js",
  "scripts": {
    "start": "npm run start:prod --prefix backend",
    "server": "npm run start:dev --prefix backend",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build:backend": "npm run build --prefix backend",
    "seed": "npm run seed --prefix backend",
    "seed:verify": "npm run seed:verify --prefix backend",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix backend && npm run build:backend && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "author": "ABC Online School",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^5.2.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "multer": "^2.0.2",
    "nodemon": "^3.1.11"
  }
}
